{
    "name": "akropolis-pool",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "generate": "npx truffle compile && typechain --target truffle './build/**/*.json'",
        "prepare": "yarn generate",
        "test": "scripts/test.sh",
        "test-gas": "GAS_REPORTER=true yarn test && npx codechecks",
        "tsc": "tsc --noEmit",
        "lint": "solhint -c .solhint.json contracts/**/*.sol",
        "prettier:solidity": "npx prettier --write contracts/**/*.sol",
        "analyze": "npx truffle run verify",
        "coverage": "npx truffle run coverage",
        "deploy": "scripts/deploy.sh"
    },
    "dependencies": {
        "@0x/typescript-typings": "^4.3.0",
        "@codechecks/client": "^0.1.10",
        "@openzeppelin/cli": "^2.5.3",
        "@openzeppelin/contracts": "^2.4.0",
        "@openzeppelin/contracts-ethereum-package": "^2.3.0",
        "@openzeppelin/test-helpers": "^0.5.3",
        "@openzeppelin/upgrades": "^2.5.3",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.2",
        "coveralls": "^3.0.7",
        "dotenv": "^8.2.0",
        "eth-gas-reporter": "^0.2.12",
        "ethereum-types": "^2.1.6",
        "ganache-cli": "^6.7.0",
        "istanbul": "^0.4.5",
        "lodash": "^4.17.11",
        "open-cli": "^5.0.0",
        "shx": "^0.3.2",
        "solidity-coverage": "0.7.0-beta.2",
        "truffle": "^5.0.41",
        "truffle-security": "^1.6.1",
        "truffle-typings": "^1.0.7",
        "ts-generator": "^0.0.8",
        "ts-node": "^7.0.1",
        "tslint": "5.11.0",
        "typechain": "1.0.3",
        "typechain-target-truffle": "^1.0.0",
        "typescript": "3.0.1",
        "web3-provider-engine": "^15.0.3",
        "web3-utils": "^1.2.1",
        "prettier": "^1.18.2",
        "prettier-plugin-solidity": "^1.0.0-alpha.34",
        "solhint-plugin-prettier": "0.0.3"
    }
}
